  <script>
    const themes = [
      { bg: 'linear-gradient(to bottom right, #0f172a, #1e293b)', accent: '#10b981' },
      { bg: 'linear-gradient(to bottom right, #1a1c40, #2e1065)', accent: '#c084fc' },
      { bg: 'linear-gradient(to bottom right, #1e3a8a, #2563eb)', accent: '#facc15' },
      { bg: 'linear-gradient(to bottom right, #0f172a, #0d9488)', accent: '#22d3ee' },
      { bg: 'linear-gradient(to bottom right, #2f3e46, #354f52)', accent: '#84a98c' }
    ];

    function changeTheme() {
      const randomTheme = themes[Math.floor(Math.random() * themes.length)];
      document.body.style.background = randomTheme.bg;
      document.querySelector('h1 span').style.color = randomTheme.accent;
    }
  </script>
